#!/usr/bin/env sh

main() {
    local root="/home/istvan/progs/gamma/src/bin"
    local py="${root}/main.py"
    
    # make debug "${root}/Makefile" && 
    
    curr="$(pwd)"
    
    cd "${root}"
    haxe -cp ../gamma --no-opt -debug -main "Main.hx" -python "main.py"
    
    cd "${curr}"
    
    python "${py}" $*
}

main $*